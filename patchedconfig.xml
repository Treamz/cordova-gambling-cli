<?xml version='1.0' encoding='utf-8'?>
<widget id="com.package.app" version="0.1" android-versionCode="1" android-activityName="StartActivity" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>NAMEREPLACE</name>
    <description>
        DESCRIPTIONREPLACE
    </description>
    <author email="APPAUTHORREEMAILPLACE" >
        APPAUTHORREPLACE
    </author>
    <preference name="android-minSdkVersion" value="22" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
            <application android:usesCleartextTraffic="true" />
        </edit-config>
        <resource-file src="res/android/values/ic_launcher_background.xml" target="/app/src/main/res/values/ic_launcher_background.xml" />
        <icon background="@color/ic_launcher_background" density="mdpi" foreground="res/android/mipmap-mdpi/ic_launcher_foreground.png" />
        <icon background="@color/ic_launcher_background" density="hdpi" foreground="res/android/mipmap-hdpi/ic_launcher_foreground.png" />
        <icon background="@color/ic_launcher_background" density="xhdpi" foreground="res/android/mipmap-xhdpi/ic_launcher_foreground.png" />
        <icon background="@color/ic_launcher_background" density="xxhdpi" foreground="res/android/mipmap-xxhdpi/ic_launcher_foreground.png" />
        <icon background="@color/ic_launcher_background" density="xxxhdpi" foreground="res/android/mipmap-xxxhdpi/ic_launcher_foreground.png" />
        <resource-file src="res/android/mipmap-mdpi/ic_launcher_round.png" target="app/src/main/res/mipmap-mdpi/ic_launcher.png" />
        <resource-file src="res/android/mipmap-hdpi/ic_launcher_round.png" target="app/src/main/res/mipmap-hdpi/ic_launcher.png" />
        <resource-file src="res/android/mipmap-xhdpi/ic_launcher_round.png" target="app/src/main/res/mipmap-xhdpi/ic_launcher.png" />
        <resource-file src="res/android/mipmap-xxhdpi/ic_launcher_round.png" target="app/src/main/res/mipmap-xxhdpi/ic_launcher.png" />
        <resource-file src="res/android/mipmap-xxxhdpi/ic_launcher_round.png" target="app/src/main/res/mipmap-xxxhdpi/ic_launcher.png" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

    
</widget>
